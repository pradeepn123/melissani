{
  "name": "Melisani",
  "private": true,
  "version": "0.0.1",
  "license": "ISC",
  "description": "Water Purifier",
  "author": "hriks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shop-trade/melissani.git"
  },
  "keywords": [
    "frontend"
  ],
  "bugs": {
    "url": "https://github.com/shop-trade/melissani/issues"
  },
  "homepage": "https://github.com/shop-trade/melissani#readme",
  "scripts": {
    "build": "npm run build:css && shopify hydrogen build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev": "npm run build:css && concurrently -g --kill-others-on-fail -r npm:dev:css \"shopify hydrogen dev\"",
    "start": "npm run build:css && concurrently -g --kill-others-on-fail -r npm:dev:css \"shopify hydrogen dev --port 8000\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "preview": "npm run build && shopify hydrogen preview",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx .",
    "format": "prettier --write --ignore-unknown ."
  },
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@formspree/react": "^2.4.1",
    "@headlessui/react": "^1.7.2",
    "@okendo/shopify-hydrogen": "^2.0.0",
    "@remix-run/react": "1.14.0",
    "@shopify/cli": "3.29.0",
    "@shopify/cli-hydrogen": "^4.0.9",
    "@shopify/hydrogen": "^2023.1.6",
    "@shopify/remix-oxygen": "^1.0.4",
    "clsx": "^1.2.1",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "flickity": "^2.3.0",
    "flowbite": "^1.6.3",
    "flowbite-react": "^0.3.8",
    "framer-motion": "^10.9.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flickity-component": "^4.0.1",
    "react-intersection-observer": "^9.4.1",
    "react-use": "^17.4.0",
    "schema-dts": "^1.1.0",
    "swiper": "^9.1.1",
    "tiny-invariant": "^1.2.0",
    "typographic-base": "^1.0.4"
  },
  "devDependencies": {
    "@remix-run/dev": "1.12.0",
    "@remix-run/eslint-config": "1.12.0",
    "@shopify/eslint-plugin": "^42.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-plugin-hydrogen": "0.12.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8"
  },
  "engines": {
    "node": ">=16.13"
  }
}
